{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "removeComments": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}